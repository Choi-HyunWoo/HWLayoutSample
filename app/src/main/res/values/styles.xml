<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaeminStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/baeminPrimary</item>
        <item name="colorPrimaryDark">@color/baeminPrimaryDark</item>
    </style>

    <style name="LezhinStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lezhinPrimary</item>
        <item name="colorPrimaryDark">@color/lezhinPrimaryDark</item>
    </style>

    <style name="NotitleStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
