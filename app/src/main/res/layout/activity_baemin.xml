<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.corcow.hw.hwlayoutsample.Baemin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <android.support.v7.widget.GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:columnCount = "3"
            app:rowCount="8"
            android:id="@+id/android.support.v7.widget.GridLayout">

            <Button
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:id="@+id/button1"
                android:background="@drawable/baemin_res1"
                app:layout_row="0"
                app:layout_column="0" />
            <Button
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:id="@+id/button2"
                android:background="@drawable/baemin_res2"
                app:layout_row="0"
                app:layout_column="1" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button3"
                android:background="@drawable/baemin_res3"
                app:layout_row="1"
                app:layout_column="0" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button4"
                android:background="@drawable/baemin_res4"
                app:layout_row="1"
                app:layout_column="1" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button5"
                android:background="@drawable/baemin_res5"
                app:layout_row="2"
                app:layout_column="0" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button6"
                android:background="@drawable/baemin_res6"
                app:layout_row="2"
                app:layout_column="1" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button7"
                android:background="@drawable/baemin_res7"
                app:layout_row="3"
                app:layout_column="0" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button8"
                android:background="@drawable/baemin_res8"
                app:layout_row="3"
                app:layout_column="1" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button9"
                android:background="@drawable/baemin_res9"
                app:layout_row="4"
                app:layout_column="0" />
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button10"
                android:background="@drawable/baemin_res10"
                app:layout_row="4"
                app:layout_column="1" />

        </android.support.v7.widget.GridLayout>

    </ScrollView>
</RelativeLayout>
